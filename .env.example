# Database
# For development (SQLite):
# DATABASE_URL="file:./dev.db"
# For production (PostgreSQL):
DATABASE_URL="postgresql://voice_app_user:your_password@localhost:5432/voice_messaging?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
# For production, use your domain:
# NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
# Generate a secure secret with: openssl rand -base64 32

# OpenAI API (for transcription and summarization)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"
# Alternative: Deepgram, AssemblyAI, etc. can be configured if needed

# Web Push Notifications (VAPID keys)
# Generate VAPID keys with: node scripts/generate-vapid-keys.js
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key-here"
VAPID_PRIVATE_KEY="your-vapid-private-key-here"
VAPID_EMAIL="mailto:your-email@example.com"
